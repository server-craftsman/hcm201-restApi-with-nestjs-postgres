{
  "name": "debate-system-api",
  "version": "1.0.0",
  "description": "Real-time debate system for Ho Chi Minh's ideology discussions",
  "author": "Debate System Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:prod:memory": "NODE_OPTIONS='--max-old-space-size=512' node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "setup": "scripts\\setup-debate-db.bat",
    "setup:linux": "chmod +x scripts/setup-debate-db.sh && scripts/setup-debate-db.sh",
    "setup:db": "scripts\\setup-debate-db.bat",
    "setup:db:linux": "chmod +x scripts/setup-debate-db.sh && scripts/setup-debate-db.sh",
    "manager": "scripts\\debate-manager.bat",
    "manager:linux": "chmod +x scripts/debate-manager.sh && scripts/debate-manager.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:rebuild": "docker-compose up -d --build",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:restart": "docker-compose -f docker-compose.dev.yml restart api",
    "docker:restart:prod": "docker-compose -f docker-compose.prod.yml restart api",
    "docker:reload": "docker-compose -f docker-compose.dev.yml up -d --build api",
    "docker:reload:prod": "docker-compose -f docker-compose.prod.yml up -d --build api",
    "reload": "docker-compose -f docker-compose.dev.yml up -d --build api",
    "db:seed": "ts-node src/database/seed.ts",
    "db:reset": "echo 'MongoDB reset - manually clear collections if needed'",
    "dev": "pnpm run start:dev",
    "prod": "pnpm run build && pnpm run start:prod",
    "debug": "pnpm run start:debug",
    "build:render": "chmod +x scripts/build.sh && scripts/build.sh",
    "postinstall": "echo 'MongoDB setup complete'"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^11.1.5",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/throttler": "^5.1.0",
    "@nestjs/websockets": "^11.1.5",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "google-auth-library": "^10.3.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}